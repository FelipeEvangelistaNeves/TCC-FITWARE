{
  "name": "Node + PostgreSQL Dev",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "forwardPorts": [3000, 5432],
  "postCreateCommand": "chmod +x .devcontainer/install_pg_client.sh && bash .devcontainer/install_pg_client.sh && sudo apt-get update && sudo apt-get install -y git-lfs && git lfs install",
  "remoteEnv": {
    "DATABASE_URL": "postgres://postgres:postgres@db:5432/app_db"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg"
      ]
    },
    "settings": {
      "terminal.integrated.shell.linux": "/bin/bash"
    }
  }
}